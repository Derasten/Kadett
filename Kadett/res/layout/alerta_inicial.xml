<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <ImageView
        android:id="@+id/imagen_alerta_inicial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:contentDescription="@string/hello_world" 
        android:layout_marginTop="10dp"/>
 
    <TextView
        android:id="@+id/texto_alerta_inicial"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#d00000" 
        android:layout_toRightOf="@+id/imagen_alerta_inicial"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/boton_alerta_inicial"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:layout_marginTop="35dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/imagen_alerta_inicial"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>